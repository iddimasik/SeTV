<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sidebar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181818"
    android:paddingTop="24dp">

    <!-- SEARCH -->
    <LinearLayout
        android:id="@+id/menu_search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="Поиск"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:textColorHint="#888888"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    </LinearLayout>

    <!-- SPACER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <!-- ALL APPS -->
    <LinearLayout
        android:id="@+id/menu_apps"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_apps"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_apps"
            android:layout_marginStart="16dp"
            android:text="Все приложения"
            android:textSize="16sp"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <!-- MOVIES -->
    <LinearLayout
        android:id="@+id/menu_movies"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_movies"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_movies"
            android:layout_marginStart="16dp"
            android:text="Фильмы и ТВ"
            android:textSize="16sp"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <!-- PROGRAMS -->
    <LinearLayout
        android:id="@+id/menu_programs"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_programs"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_programs"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Программы"
            android:textSize="16sp"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- OTHER -->
    <LinearLayout
        android:id="@+id/menu_other"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_other"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_other"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Прочее"
            android:textSize="16sp"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- SPACER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- UPDATE -->
    <LinearLayout
        android:id="@+id/menu_update"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_update"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_update"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Обновить приложение"
            android:textSize="16sp"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- SETTINGS -->
    <LinearLayout
        android:id="@+id/menu_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_settings"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Настройки"
            android:textSize="16sp"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
