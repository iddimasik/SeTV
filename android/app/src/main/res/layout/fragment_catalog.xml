<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/catalogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- ───────── TOP ROW ───────── -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <rus.setv.ui.BannerCarousel
            android:id="@+id/bannerCarousel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <androidx.leanback.widget.VerticalGridView
            android:id="@+id/recommendedGrid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:numColumns="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:verticalSpacing="8dp" />
    </LinearLayout>

    <!-- ───────── STATUS FILTERS ───────── -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="12dp"
        android:focusable="false">

        <LinearLayout
            android:id="@+id/statusFiltersContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <!-- ALL -->
            <include
                android:id="@+id/filterStatusAll"
                layout="@layout/item_filter_button" />

            <!-- INSTALLED -->
            <include
                android:id="@+id/filterStatusInstalled"
                layout="@layout/item_filter_button" />

            <!-- NOT INSTALLED -->
            <include
                android:id="@+id/filterStatusNotInstalled"
                layout="@layout/item_filter_button" />

            <!-- UPDATES -->
            <include
                android:id="@+id/filterStatusUpdates"
                layout="@layout/item_filter_button" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- ───────── APPS GRID ───────── -->
    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/appsGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
