<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sidebar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181818"
    android:paddingTop="24dp">

    <!-- SEARCH -->
    <LinearLayout
        android:id="@+id/menu_search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:hint="Поиск"
            android:textColor="@drawable/text_color_focus"
            android:textColorHint="#888888"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    </LinearLayout>

    <!-- СПЕЙСЕР -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- APPS -->
    <LinearLayout
        android:id="@+id/menu_apps"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:id="@+id/icon_apps"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_apps"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Приложения"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- GAMES -->
    <LinearLayout
        android:id="@+id/menu_games"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:id="@+id/icon_games"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_games"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Игры"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- СПЕЙСЕР -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- UPDATE -->
    <LinearLayout
        android:id="@+id/menu_update"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:id="@+id/icon_update"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_update"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Обновить приложение"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- SETTINGS -->
    <LinearLayout
        android:id="@+id/menu_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:focusable="true"
        android:background="@drawable/sidebar_item_bg">

        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            app:tint="@drawable/text_color_focus"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/text_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Настройки"
            android:textColor="@drawable/text_color_focus"
            android:duplicateParentState="true"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
