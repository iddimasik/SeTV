<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/catalogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ───────── TOP ROW ───────── -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- БАННЕР -->
        <rus.setv.ui.BannerCarousel
            android:id="@+id/bannerCarousel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:focusable="false"
            android:paddingEnd="12dp" />

        <!-- РЕКОМЕНДАЦИИ (2 ШТУКИ ГОРИЗОНТАЛЬНО) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <rus.setv.ui.RecommendedAppView
                android:id="@+id/recommendedApp1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <rus.setv.ui.RecommendedAppView
                android:id="@+id/recommendedApp2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- ───────── GRID ───────── -->
    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/appsGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
