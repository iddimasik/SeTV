<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_blur">

    <!-- MAIN CONTENT (full width, always visible) -->
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="60dp"
        android:padding="10dp"/>

    <!-- DIM OVERLAY (appears when sidebar opens, blocks focus on content) -->
    <View
        android:id="@+id/dim_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <!-- SIDEBAR (overlay on top) -->
    <FrameLayout
        android:id="@+id/sidebar_container"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:elevation="16dp"/>

</FrameLayout>
