<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- ================= CONTENT ================= -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- APP ICON -->
                    <ImageView
                        android:id="@+id/appImage"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop" />

                    <!-- INFO -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="24dp">

                        <TextView
                            android:id="@+id/appTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:maxLines="1"
                            android:textStyle="bold" />

                        <!-- VERSION + SIZE -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="32dp">

                                <TextView
                                    android:id="@+id/appVersion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#B0B0B0"
                                    android:text="Версия" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/appSize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#B0B0B0"
                                    android:text="Размер" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/appDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:paddingTop="8dp" />

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:paddingTop="16dp" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:trackThickness="6dp" />

                    </LinearLayout>
                </LinearLayout>

                <!-- ================= SCREENSHOTS ================= -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/screenshotsList"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="-24dp"
                    android:visibility="gone"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:overScrollMode="never" />

            </LinearLayout>
        </ScrollView>

        <!-- ================= BUTTONS ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp">

            <!-- BACK -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Назад"
                app:cornerRadius="16dp"
                android:backgroundTint="@drawable/button_color_focus"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@drawable/text_color_focus"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- UNINSTALL -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/uninstallButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Удалить"
                android:visibility="gone"
                app:cornerRadius="16dp"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="@drawable/red_button_color"
                android:textColor="@drawable/text_color_focus"/>

            <!-- INSTALL -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/installButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:text="Установить"
                app:cornerRadius="16dp"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="@drawable/button_color_focus"
                android:textColor="@drawable/text_color_focus"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
