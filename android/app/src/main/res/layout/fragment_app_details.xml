<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"

    android:focusable="false"
    android:focusableInTouchMode="false"

    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ===== CONTENT ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- IMAGE -->
            <ImageView
                android:id="@+id/appImage"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:scaleType="centerCrop" />

            <!-- INFO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="24dp">

                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:textStyle="bold" />

                <!-- VERSION AND SIZE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="32dp">

                        <TextView
                            android:id="@+id/appVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:text="1.0.0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#B0B0B0"
                            android:text="Version" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/appSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:text="0MB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#B0B0B0"
                            android:text="Size" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/appDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#B0B0B0"
                    android:maxLines="3"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:paddingTop="16dp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:trackThickness="6dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- ===== BUTTONS ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp">

            <!-- Кнопка "Назад" слева -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Назад"
                app:cornerRadius="16dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Spacer -->
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Кнопка "Удалить" (только для установленных) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/uninstallButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Удалить"
                android:visibility="gone"
                app:cornerRadius="16dp"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="#E53935"
                android:textColor="@drawable/text_color_focus"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/installButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Установить"
                app:cornerRadius="16dp"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="@drawable/button_color_focus"
                android:textColor="@drawable/text_color_focus"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>