<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸ”¥ Ð”Ð¾ÑÑ‚ÑƒÐ¿ Ðº ÑƒÑÑ‚Ð°Ð½Ð¾Ð²Ð»ÐµÐ½Ð½Ñ‹Ð¼ Ð¿Ñ€Ð¸Ð»Ð¾Ð¶ÐµÐ½Ð¸ÑÐ¼ (Android 11+) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
        </intent>

    </queries>

    <!-- Android TV -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <!-- Ð¡ÐµÑ‚ÑŒ Ð¸ ÑƒÑÑ‚Ð°Ð½Ð¾Ð²ÐºÐ° APK -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:allowBackup="true"
        android:banner="@drawable/banner"
        android:label="SeTV Store"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.SeTV"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- ðŸ”¥ Ð“Ð›ÐÐ’ÐÐÐ¯ ÐÐšÐ¢Ð˜Ð’ÐÐžÐ¡Ð¢Ð¬ TV -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SeTV"
            android:screenOrientation="landscape">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name=".apk.InstallResultReceiver"
            android:exported="false" />

    </application>

</manifest>
